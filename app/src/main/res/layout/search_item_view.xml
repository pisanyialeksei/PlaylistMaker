<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp">

    <ImageView
        android:id="@+id/search_item_artwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="13dp"
        android:src="@drawable/track_artwork_placeholder" />

    <TextView
        android:id="@+id/search_item_name"
        style="@style/SearchItemSubtitle"
        android:layout_width="250dp"
        android:layout_height="19dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="28dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/regular_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_item_artist"
            style="@style/SearchItemSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginTop="@dimen/search_item_subtitle_margin_top"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="@dimen/search_item_subtitle_margin_top"
            android:scaleType="center"
            app:tint="?attr/colorSecondary"
            android:src="@drawable/separator_dot" />

        <TextView
            android:id="@+id/search_item_duration"
            style="@style/SearchItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_item_subtitle_margin_top" />

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_arrow_forward"
        app:tint="?attr/colorSecondary" />

</FrameLayout>
