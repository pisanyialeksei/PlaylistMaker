<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".library.ui.fragment.PlaylistFragment">

    <ImageView
        android:id="@+id/playlist_cover_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/playlist_name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/track_artwork_player_placeholder" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_bold"
        android:textColor="@color/yp_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/playlist_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playlist_cover_image_view"
        tools:text="Best songs 2021" />

    <TextView
        android:id="@+id/playlist_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/yp_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/playlist_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        tools:text="2022" />

    <TextView
        android:id="@+id/playlist_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/yp_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/playlist_share_button"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playlist_description"
        tools:text="300 min" />

    <ImageView
        android:id="@+id/playlist_length_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:scaleType="center"
        android:src="@drawable/ic_separator_dot"
        app:layout_constraintEnd_toStartOf="@id/playlist_count"
        app:layout_constraintStart_toEndOf="@id/playlist_length"
        app:layout_constraintTop_toBottomOf="@id/playlist_description"
        app:tint="@color/yp_black" />

    <TextView
        android:id="@+id/playlist_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/yp_black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/playlist_length_separator"
        app:layout_constraintTop_toBottomOf="@id/playlist_description"
        tools:text="98 tracks" />

    <ImageButton
        android:id="@+id/playlist_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_share"
        android:backgroundTint="@color/yp_black"
        app:layout_constraintBottom_toTopOf="@id/playlist_tracks_bottom_sheet"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playlist_length" />

    <ImageButton
        android:id="@+id/playlist_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_more"
        android:backgroundTint="@color/yp_black"
        app:layout_constraintBottom_toTopOf="@id/playlist_tracks_bottom_sheet"
        app:layout_constraintStart_toEndOf="@id/playlist_share_button"
        app:layout_constraintTop_toBottomOf="@id/playlist_length" />


    <LinearLayout
        android:id="@+id/playlist_tracks_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/playlist_bottom_sheet_background"
        android:minHeight="500dp"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_share_button">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_bottom_sheet_handler" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_tracks_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
