<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:src="@drawable/track_artwork_player_placeholder" />

    <TextView
        android:id="@+id/name"
        style="@style/PlayerNameAndArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/cover"
        tools:text="Track name" />

    <TextView
        android:id="@+id/artist"
        style="@style/PlayerNameAndArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="Artist name" />

    <ImageButton
        android:id="@+id/add_to_playlist_button"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/player_secondary_button_background"
        android:src="@drawable/ic_add_to_playlist"
        app:backgroundTint="@null"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/play_button"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/artist" />

    <FrameLayout
        android:id="@+id/play_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/add_to_favorites_button"
        app:layout_constraintStart_toEndOf="@id/add_to_playlist_button"
        app:layout_constraintTop_toBottomOf="@id/artist">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/play_button_background" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/add_to_favorites_button"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/player_secondary_button_background"
        android:src="@drawable/ic_add_to_favorites"
        app:backgroundTint="@null"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/play_button"
        app:layout_constraintTop_toBottomOf="@id/artist" />

    <TextView
        android:id="@+id/currentDuration"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/play_button"
        tools:text="02:30" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/currentDuration">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/durationTitle"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:text="@string/duration"
                android:textColor="@color/yp_text_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/durationValue"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="02:40" />

            <TextView
                android:id="@+id/albumTitle"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:text="@string/album"
                android:textColor="@color/yp_text_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durationTitle" />

            <TextView
                android:id="@+id/albumValue"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durationValue"
                tools:text="Some album" />

            <TextView
                android:id="@+id/yearTitle"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:text="@string/year"
                android:textColor="@color/yp_text_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumTitle" />

            <TextView
                android:id="@+id/yearValue"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumValue"
                tools:text="2007" />

            <TextView
                android:id="@+id/genreTitle"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:text="@string/genre"
                android:textColor="@color/yp_text_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yearTitle" />

            <TextView
                android:id="@+id/genreValue"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yearValue"
                tools:text="Rock" />

            <TextView
                android:id="@+id/countryTitle"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:text="@string/country"
                android:textColor="@color/yp_text_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genreTitle" />

            <TextView
                android:id="@+id/countryValue"
                style="@style/PlayerInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/player_info_item_height"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genreValue"
                tools:text="USA" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
