<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
        <item name="android:gravity">start|center</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SearchInputImageView">
        <item name="tint">@color/black_russian</item>
        <item name="android:background">"@android:color/transparent"</item>
    </style>
</resources>
