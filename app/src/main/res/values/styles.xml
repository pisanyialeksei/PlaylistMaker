<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_marginBottom">@dimen/toolbar_margin_bottom</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/toolbar_title_padding_top</item>
        <item name="android:paddingBottom">@dimen/toolbar_title_padding_bottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MainButton"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_russian</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
        <item name="android:layout_marginHorizontal">@dimen/main_button_horizontal_margin</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
    </style>

    <style name="SettingsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
        <item name="android:gravity">start|center</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/aluminium_snow</item>
    </style>

    <style name="SearchInputImageView">
        <item name="tint">@color/aluminium_snow</item>
        <item name="android:background">"@android:color/transparent"</item>
    </style>
</resources>
