<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitle">
        <item name="android:paddingTop">@dimen/toolbar_title_padding_top</item>
        <item name="android:paddingBottom">@dimen/toolbar_title_padding_bottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="SettingsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
        <item name="android:gravity">start|center</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <style name="SearchInputHint">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">@string/search_title</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="SearchInputImageView">
        <item name="tint">@color/yp_text_gray</item>
        <item name="android:background">"@android:color/transparent"</item>
    </style>

    <style name="SearchItemSubtitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">Sample text</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/search_item_subtitle_text_size</item>
    </style>

    <style name="ListButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="ListSecondaryViewText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/list_secondary_view_text_size</item>
    </style>

    <style name="PlayerNameAndArtist">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerInfo">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>"
        <item name="itemTextColor">@color/bottom_nav_selector</item>"
        <item name="itemTextAppearance">@style/BottomNavigationText</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewPlaylistTextInputLayoutHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewPlaylistTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color_selector</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/NewPlaylistTextInputLayoutHint</item>
        <item name="hintTextColor">@color/yp_blue</item>
    </style>
</resources>
